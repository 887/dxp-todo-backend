    "version": "2.0.0",
    "tasks": [
        // {
        //     "label": "sleep",
        //     "type": "shell",
        //     "command": "sleep 5",
        // },
        {
            "label": "watch",
            "type": "shell",
            "args": [
                "watch", 
                "-w", "heart",
                "-w", "migration",
                "-x", "'build -p heart -p migration-runner'"],
            "isBackground": true,
            "command": "cargo",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": false,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
    ]
}